<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyLinearProgressView">
        <attr name="lp_paintWidth" format="dimension"></attr>
        <attr name="lp_paintColor" format="color"></attr>
        <attr name="lp_textSize" format="dimension"></attr>
        <attr name="lp_bgPaintSize" format="dimension"></attr>
        <attr name="lp_type" format="integer"></attr>
        <attr name="lp_startColor" format="color" />
        <attr name="lp_endColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LineProgressView">
        <attr name="paint_width" format="dimension"/>
        <attr name="paint_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="paint_size" format="dimension"/>
        <attr name="type" format="integer"/>
        <attr name="start_color" format="color"/>
        <attr name="end_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="LineProgressBarView">
       <attr name="bar_width"/>
       <attr name="bar_height"/>
        <attr name="margin"/>
        <attr name="num_a" format="float"/>
        <attr name="num_b" format="float"/>
        <attr name="bar_type"/>
        <attr name="background_color"/>
        <attr name="color_a" format="color"/>
        <attr name="color_b" format="color"/>
    </declare-styleable>

    <declare-styleable name="RoundView">
        <!--圆环半径-->
        <attr name="radius" format="dimension"/>
        <!--圆环宽度-->
        <attr name="ring_width" format="dimension"/>
        <!--圆环颜色-->
        <attr name="ring_color" format="color"/>
        <!--进度圆环宽度-->
        <attr name="progress_ring_width" format="dimension"/>
        <!--进度圆环开始颜色-->
        <attr name="progress_ring_start_color" format="color"/>
        <!--进度圆环结束颜色-->
        <attr name="progress_ring_end_color" format="color"/>
        <attr name="android_radius" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="text_size1" format="dimension"/>
    </declare-styleable>

    <!--圆弧进度条-->
    <declare-styleable name="TasksCompletedView">
        <attr name="radius1" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="ringBgColor" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="RingProgressBarView">
        <attr name="circle_radius" format="dimension"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="circle_color" format="color"/>
        <attr name="ring_background_color" format="color"/>
        <attr name="ring_cor" forLineProgressBarViewmat="color"/>
        <attr name="font_color" format="color"/>
        <attr name="font_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VerticalBarView">
        <attr name="line_width" format="dimension"/>
        <attr name="line_height" format="dimension"/>
        <attr name="line_margin" format="dimension"/>
        <attr name="line_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="LineProgressOView">
        <attr name="bar_height"/>
        <attr name="bar_width"/>
        <attr name="margin"/>
        <attr name="background_color"/>
        <attr name="num" format="float"/>
        <attr name="bar_type"/>
        <attr name="bar_color" format="color"/>
    </declare-styleable>

    <attr name="bar_width" format="dimension"/>
    <attr name="bar_height" format="dimension"/>
    <attr name="bar_type" format="integer"/>
    <attr name="margin" format="integer"/>
    <attr name="background_color" format="color"/>
</resources>