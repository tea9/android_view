<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle表示为矩形 -->

    <!-- 填充的颜色 -->
    <solid android:color="@android:color/white" />

    <!-- 边框的颜色和粗细 -->
    <stroke
        android:width="0.2dp"
        android:color="#E2E3E4"
        />

    <!-- android:radius 圆角的半径 -->
    <corners
        android:radius="20dp"
        />

</shape>